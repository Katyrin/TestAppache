<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SingleColorMin">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <style name="IconOnlyMin">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="strokeColor">@color/iconColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconTint">@color/iconColor</item>
        <item name="backgroundTint">?attr/alwaysWhiteColor</item>
        <item name="cornerRadius">@dimen/margin_normal</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnlyMax" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconSize">36dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">52dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="backgroundTint">?attr/alwaysWhiteColor</item>
        <item name="cornerRadius">16dp</item>
