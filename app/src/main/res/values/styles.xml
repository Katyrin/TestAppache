<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SingleColorMin">
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/padding_group_button</item>
        <item name="android:paddingRight">@dimen/padding_group_button</item>
        <item name="android:minWidth">@dimen/max_square_button_size</item>
        <item name="android:minHeight">@dimen/max_square_button_size</item>
        <item name="cornerRadius">@dimen/margin_max</item>
    </style>

    <style name="IconOnlyMin">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/padding_group_button</item>
        <item name="android:paddingRight">@dimen/padding_group_button</item>
        <item name="android:minWidth">@dimen/min_square_button_size</item>
        <item name="android:minHeight">@dimen/min_square_button_size</item>
        <item name="strokeColor">@color/icon_color</item>
        <item name="strokeWidth">@dimen/stroke_size</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="backgroundTint">?attr/alwaysWhiteColor</item>
        <item name="cornerRadius">@dimen/margin_normal</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnlyMax" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/padding_group_button</item>
        <item name="android:paddingRight">@dimen/padding_group_button</item>
        <item name="android:minWidth">@dimen/max_square_button_size</item>
        <item name="android:minHeight">@dimen/max_square_button_size</item>
        <item name="backgroundTint">?attr/alwaysWhiteColor</item>
        <item name="cornerRadius">@dimen/margin_max</item>
    </style>

    <style name="HeaderTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/color_text_header</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

</resources>